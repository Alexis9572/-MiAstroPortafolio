---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Proyectos · Alexis Torres">
  <section class="py-5 px-5 max-w-6xl mx-auto">
    <h2 class="text-4xl font-bold text-center text-gray-900 dark:text-white mb-12
               after:content-[''] after:block after:w-20 after:h-1 after:rounded after:mx-auto after:mt-3 after:bg-gradient-to-r from-blue-600 to-purple-600">
      Mis Proyectos
    </h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Proyecto 1 -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-xl transition hover:-translate-y-1">
        <img src="/img/slide1.jpg" alt="Proyecto 1" class="w-full h-48 object-cover"/>
        <div class="p-5">
          <h3 class="text-xl font-semibold mb-2">Sistema de Almacén y Ventas</h3>
          <p class="text-gray-700 dark:text-gray-300">Sistema de ventas y almacén desarrollado en Java.</p>
        </div>
      </div>

      <!-- Proyecto 2 -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-xl transition hover:-translate-y-1">
        <img src="/img/slide2.jpg" alt="Proyecto 2" class="w-full h-48 object-cover"/>
        <div class="p-5">
          <h3 class="text-xl font-semibold mb-2">Calculadora Científica</h3>
          <p class="text-gray-700 dark:text-gray-300">Calculadora científica desarrollada en Java.</p>
        </div>
      </div>

      <!-- Proyecto 3 -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-xl transition hover:-translate-y-1">
        <img src="/img/slide3.jpg" alt="Proyecto 3" class="w-full h-48 object-cover"/>
        <div class="p-5">
          <h3 class="text-xl font-semibold mb-2">Portafolio Web</h3>
          <p class="text-gray-700 dark:text-gray-300">Presentación profesional de mi perfil usando HTML y CSS.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
