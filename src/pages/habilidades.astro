---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css"; // si tienes estilos globales
---

<BaseLayout title="Habilidades Â· Alexis Torres">
  <main class="container mx-auto py-10 px-5">
    <h1 class="text-4xl font-bold text-center text-gray-900 dark:text-white relative mb-12 after:content-[''] after:block after:w-20 after:h-1 after:rounded after:mx-auto after:mt-3 after:bg-gradient-to-r from-blue-600 to-purple-600">
      Mis Habilidades
    </h1>

    <div class="max-w-xl mx-auto space-y-6">
      
      <!-- SQL -->
      <div>
        <div class="flex justify-between mb-1">
          <span class="font-medium text-gray-800 dark:text-gray-200">SQL</span>
          <span class="font-medium text-gray-600 dark:text-gray-300">10%</span>
        </div>
        <div class="w-full h-3 bg-gray-300 dark:bg-gray-700 rounded-full overflow-hidden">
          <div class="h-3 bg-blue-600 rounded-full" style="width:10%"></div>
        </div>
      </div>

      <!-- JavaScript -->
      <div>
        <div class="flex justify-between mb-1">
          <span class="font-medium text-gray-800 dark:text-gray-200">JavaScript</span>
          <span class="font-medium text-gray-600 dark:text-gray-300">10%</span>
        </div>
        <div class="w-full h-3 bg-gray-300 dark:bg-gray-700 rounded-full overflow-hidden">
          <div class="h-3 bg-yellow-400 rounded-full" style="width:10%"></div>
        </div>
      </div>

      <!-- React / Bootstrap -->
      <div>
        <div class="flex justify-between mb-1">
          <span class="font-medium text-gray-800 dark:text-gray-200">React / Bootstrap</span>
          <span class="font-medium text-gray-600 dark:text-gray-300">15%</span>
        </div>
        <div class="w-full h-3 bg-gray-300 dark:bg-gray-700 rounded-full overflow-hidden">
          <div class="h-3 bg-teal-400 rounded-full" style="width:15%"></div>
        </div>
      </div>

      <!-- Python -->
      <div>
        <div class="flex justify-between mb-1">
          <span class="font-medium text-gray-800 dark:text-gray-200">Python</span>
          <span class="font-medium text-gray-600 dark:text-gray-300">50%</span>
        </div>
        <div class="w-full h-3 bg-gray-300 dark:bg-gray-700 rounded-full overflow-hidden">
          <div class="h-3 bg-green-500 rounded-full" style="width:50%"></div>
        </div>
      </div>

      <!-- C++ -->
      <div>
        <div class="flex justify-between mb-1">
          <span class="font-medium text-gray-800 dark:text-gray-200">C++</span>
          <span class="font-medium text-gray-600 dark:text-gray-300">20%</span>
        </div>
        <div class="w-full h-3 bg-gray-300 dark:bg-gray-700 rounded-full overflow-hidden">
          <div class="h-3 bg-red-500 rounded-full" style="width:20%"></div>
        </div>
      </div>

    </div>
  </main>
</BaseLayout>
